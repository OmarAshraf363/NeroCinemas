@model Nero.Models.Movie

@{
    ViewData["Title"] = Model.Name;
    Layout = "_DetailsLayout";
}


    <style>
        .movie-detail {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 2rem;
        }

            .movie-detail img {
                max-width: 100%;
                border-radius: 8px;
            }

        .movie-info {
            color:white;
            text-align: center;
            margin-top: 1.5rem;
        }

        .badge-status {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            color: #fff;
            font-weight: bold;
        }

        .badge-available {
            background-color: #28a745;
        }

        .badge-upcoming {
            background-color: #ffc107;
        }

        .badge-expired {
            background-color: #dc3545;
        }

        .btn-group {
            margin-top: 1rem;
        }
    </style>

    <div class="container movie-detail">
        <div>
            <img src="/Images/@Model.ImgUrl" alt="@Model.Name" class="img-fluid">
        </div>
        <div class="movie-info">
            <h1>@Model.Name</h1>
            <p>@Model.Description</p>
            <p class="badge-status
                @(Model.MovieStatus == MovieStatus.Available ? "badge-available" :
                  Model.MovieStatus == MovieStatus.Upcoming ? "badge-upcoming" :
                  "badge-expired")">
                @Model.MovieStatus
            </p>
        <p class="text-warning"> <strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p class="text-success"><strong>Start Date:</strong> @Model.StartDate.ToString("d MMM yyyy")</p>
        <p class="text-danger"><strong>End Date:</strong> @Model.EndDate.ToString("d MMM yyyy")</p>
        <p class="text-warning"><strong> Num Of Visit</strong>  : @Model.NumOfVisit</p>
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

















































