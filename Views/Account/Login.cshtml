@model Nero.ViewModel.LoginVM

@{
    ViewData["Title"] = "Register";
    Layout = "_AccountLayout";
}


<div class="container d-flex h-100 justify-content-center align-items-center">

    <form id="registerForm" class="w-25 "  asp-action="Login" method="post">
        <div class="mb-3 text-center">
            <h3 class="text-light">Login</h3>
            <p class="text-warning">Takecare If You Checked Remmber me , only 14 day remmber !! </p>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
        <div class="form-group part">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group part">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input class="form-check-input" asp-for="RememberMe" />
            <label class="form-check-label" asp-for="RememberMe">Remember me</label>
        </div>
   
        <div class="w-100  d-flex gap-2 align-items-center">
            <button type="submit" class="btn btn-outline-success">Create</button>

            <a asp-action="Register">Create New Account..</a>

        </div>
    </form>




</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

